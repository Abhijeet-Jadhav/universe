{
  "id": "/{{proxy.name}}",
  "instances": {{proxy.instances}},
  "cpus": {{proxy.cpus}},
  "mem": {{proxy.mem}},
  "maintainer": "support@mesosphere.io", 
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.proxy-docker}}",
      "network": "BRIDGE",    
      "portMappings": [
        { "containerPort": 8082, "hostPort": 0 }
      ]
    }
  },
  "env": {
    "REST_ZOOKEEPER_CONNECT": "{{proxt.zk}}",
    "REST_SCHEMA_REGISTRY_URL": "{{proxy.registry}}"
  },
  "acceptedResourceRoles": [
    "{{proxy.role}}"
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{proxy.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
